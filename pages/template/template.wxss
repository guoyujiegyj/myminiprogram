.container{
  border-top:1px solid #ddd; 
  padding-bottom:20rpx;
}
.imgInfo{
  width:100%;
  height:400rpx; 
}
.title{
  width:100%; 
  display: flex;
  flex-direction: row;
  padding:10rpx 0;
}
.title>image{
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
  margin:0 30rpx;
}
.bot{
  width:100%;
   display: flex;
  flex-direction: row;
}
.bot image{
  vertical-align: middle;
}
.bot-img{
  margin:0  20rpx;
}
.bot-img>image,.bot-see>image{
  width:40rpx;
  height:40rpx;
}
.txt{
  height: 290rpx;
  text-indent: 32rpx;
  padding:10rpx 6rpx;

  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;

}